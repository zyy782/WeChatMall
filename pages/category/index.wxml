<view class="cates">
  <SearchInput></SearchInput>
  <view class="cates_container">       <!--整个容器看做伸缩盒子  左边滚动菜单  右边商品滚动  -->
    <!-- 左侧菜单 -->
    <scroll-view scroll-y="{{true}}" class="left_menu">
     <view 
     class="menu_item {{index===currentIndex?'active':''}}" 
     wx:for="{{leftMenuList}}"
     wx:key="*this"
     bindtap="handleItemTap"
     data-index="{{index}}"
     >
       {{item}}
     </view>
    </scroll-view>
    <!-- 右侧商品内容 -->
    <scroll-view scroll-top="{{scrollTop}}" scroll-y="{{true}}" class="right_content">
      <view 
      class="goods_group"
      wx:for="{{rightContent}}"
      wx:for-index="index1"
      wx:for-item="item1"
      >
        <view class="goods_title">
          <view class="delimiter">/</view>
          <view class="title">{{item1.cat_name}}</view>
          <view class="delimiter">/</view>
        </view>
        <view class="goods_list">
          <navigator
          wx:for="{{item1.children}}"
          wx:for-index="index2"
          wx:for-item="item2"
          wx:key="cat_id"
          url="/pages/goods_list/index?cid={{item2.cat_id}}"
          >
          <!-- 图片途径不能忘记双层大括号  否则渲染不出图片！！！！！ -->
          <image mode="widthFix" src="{{item2.cat_icon}}"></image>
          <view class="goods_name">{{item2.cat_name}} </view>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>